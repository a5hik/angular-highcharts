{
    "formConfig": {
        "burnDownBy": "release",
        "planningFolderId": "",
        "trackerId": "",
        "fields": {
            "params": [
                {
                    "label": "PlanningFolder ID",
                    "name": "planning-folder-id",
                    "model": "formConfig.planningFolderId",
                    "placeHolder": "Type to Select a Planning Folder...",
                    "type": "multi-select",
                    "object": "plan"
                },
                {
                    "label": "Tracker ID",
                    "name": "tracker-id",
                    "model": "formConfig.trackerId",
                    "placeHolder": "Type to Select a Tracker...",
                    "type": "multi-select",
                    "object": "tracker"
                },
                {
                    "label": "Burn Down By",
                    "name": "burn-down-by",
                    "model": "formConfig.burnDownBy",
                    "type": "radio",
                    "options": [
                        {
                            "id": "release",
                            "title": "Release"
                        },
                        {
                            "id": "sprint",
                            "title": "Sprint"
                        }
                    ]
                }
            ],
            "display": [
                {
                    "label": "Title",
                    "name": "title",
                    "type": "text",
                    "model": "chartConfig.title.text"
                },
                {
                    "label": "Subtitle",
                    "name": "sub-title",
                    "type": "text",
                    "model": "chartConfig.subtitle.text"
                },
                {
                    "label": "Display Type",
                    "name": "display-type",
                    "type": "select",
                    "model": "chartConfig.options.chart.type",
                    "options": [
                        {
                            "id": "line",
                            "title": "Line"
                        },
                        {
                            "id": "spline",
                            "title": "Smooth line"
                        },
                        {
                            "id": "area",
                            "title": "Area"
                        },
                        {
                            "id": "column",
                            "title": "Column"
                        },
                        {
                            "id": "bar",
                            "title": "Bar"
                        },
                        {
                            "id": "scatter",
                            "title": "Scatter"
                        }
                    ]
                }
            ]
        }

    },
    "chartConfig": {
        "options": {
            "chart": {
                "type": "column"
            },
            "colors": ["#2f7ed8", "#0d233a"]
        },

        "credits": {
            "enabled": false
        },
        "title": {
            "text": "Agile Burn Down by Sprint"
        },
        "subtitle": {
            "text": "Testing Report for POC"
        },
        "labels": {
            "items": [
                {
                    "html": "Sample Report",
                    "style": {
                        "left": "100px",
                        "top": "-50px",
                        "fontSize": "20px"
                    }
                }
            ]
        },
        "xAxis": {
            "plotBands": [
                {
                    "color": "#eeeeee",
                    "from": -0.4,
                    "to": 0.4,
                    "zIndex": 3
                },
                {
                    "color": "#eeeeee",
                    "from": 0.6,
                    "to": 1.4,
                    "zIndex": 3
                }
            ],
            "title": {
                "text": "Sprint -- Average Velocity: 3 Points/sprint"
            },
            "categories": [ "Sprint1", "Sprint2", "Sprint3", "Sprint4" ]
